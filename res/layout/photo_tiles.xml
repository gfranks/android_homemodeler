<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#F0F0F0">
        
        <Button
            android:id="@+id/photo_tiles_add"
            style="@style/HomeTileButton"
            android:layout_width="0dp"
            android:layout_weight=".33333"
            android:drawableTop="@android:drawable/ic_input_add"
            android:gravity="center"
            android:text="@string/photo_tiles_add" />

        <Button
            android:id="@+id/photo_tiles_edit"
            style="@style/HomeTileButton"
            android:layout_width="0dp"
            android:layout_weight=".33333"
            android:drawableTop="@android:drawable/ic_input_delete"
            android:text="@string/photo_tiles_edit" />
        
    </LinearLayout>

</merge>